<% @ribbon_text = "Taking your order" %>
<div class="bg-white d-flex flex-column justify-content-between" data-controller="audio-input">
  <div class="flex-column center-text">
    <p>Choose how you like to place your order</p>
  </div>
  <div class="flex-column justify-content-between" >
    <div class="flex-column justify-content-stretch mt-3" id="textAreaFrame" data-audio-input-target="textAreaFrame">
      <!-- Initially empty -->
    </div>
    <div class="space-between">
      <button class="button violet" data-action="click->audio-input#showTextArea">
        <i class="fa fa-pencil-alt"></i>
        <span></span>
      </button>
      <button class="button violet" data-action="click->audio-input#toggleRecording" data-audio-input-target="recordButton">
        <i class="fa fa-microphone record-icon"></i>
        <i class="fa fa-stop stop-icon hidden"></i>
        <span class="record-text"></span>
        <span class="stop-text hidden"></span>
      </button>
    </div>
    <div class="d-flex justify-content-end">
      <button class="button violet hidden" data-action="click->audio-input#submitReviewedText" data-audio-input-target="submitButton">
        Find my groceries!
      </button>
    </div>
  </div>
</div>
