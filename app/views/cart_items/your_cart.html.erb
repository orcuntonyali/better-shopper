<% @ribbon_text = "Taking your order" %>
<div class="d-flex flex-column justify-content-between h--100 px-2">
  <div class="flex-column">
    <% if @processed_items && @processed_items.any? %>
      <% @processed_items.each do |item| %>
        <div class="item-card space-between">
          <a href="<%= item_path(id: item['selected_item']['id']) %>" class="space-between no-decoration">
            <img src="<%= item['selected_item']['image_url'] %>" alt="<%= item['selected_item']['name'] %> image" width="90">
            <div class="item-card-text">
              <h5><%= item['selected_item']['name'].capitalize %></h5>
              <p>From <%= item['selected_item'].store.name %></p>
              <p> â‚¬<%= item['selected_item']["unit_price"] %></p>
            </div>
          </a>
          <div class="space-between button-quantity" data-controller="minus-plus">
            <div data-action="click->minus-plus#decrement" data-item-id="<%= item['selected_item']['id'] %>">-</div>
            <div id="quantity_<%= item['selected_item']['id'] %>" data-minus-plus-target="quantity"><%= item['quantity'] %></div>
            <div data-action="click->minus-plus#increment" data-item-id="<%= item['selected_item']['id'] %>">+</div>
          </div>
        </div>
      <% end %>
    <% elsif @not_found_message %>
      <div>
        <h1>Items Not Found</h1>
        <p><%= @not_found_message %></p>
      </div>
    <% else %>
      <div>
        <h1>No Items in Cart</h1>
        <p>Please add items to your cart.</p>
      </div>
    <% end %>
  </div>
  <div class="flex-column">
    <div class="space-between">
      <%= link_to '+ ADD ITEMS', new_cart_item_path, class: 'button violet' %>
      <button class="button violet">CHECKOUT</button>
    </div>
  </div>
</div>
