<% @ribbon_text = "Checkout" %>
<%= render "shared/ribbon" %>

<div class="bg-white" style="padding: 0 15px;">
  <h4>Items:</h4>
    <table style="width: 100%;">
    <tr>
      <th class="text-center" style="width: 25%">Name</th>
      <th class="text-center" style="width: 25%">Price</th>
      <th class="text-center" style="width: 25%">Quantity</th>
      <th class="text-center" style="width: 25%">Total</th>
    </tr>
    <% @items.each do |item| %>
      <tr>
        <td class="text-left"><%= item.item.name.capitalize %></td>
        <td class="text-center"><%= item.item.unit_price %>€</td>
        <td class="text-center"><%= item.quantity %></td>
        <td class="text-center"><%= item.item.unit_price * item.quantity %>€</td>
      </tr>
    <% end %>
  </table>

  <hr style="border-color: #6200EE; border-width: 2px; margin-left: 15px; margin-right: 15px;">

  <div style="display: flex; align-items: center;"">
    <h5>Subtotal:</h5>
    <h5 style="margin-left: auto;"> € <%= @total_price %></h5> 
  </div>

  <hr style="border-color: #6200EE; border-width: 2px; margin-left: 15px; margin-right: 15px;">

  <div data-controller="delivery-toggle" style="display: flex; align-items: center;">
    <h5>Deliver to my address</h5>
    <label class="switch" style="margin-left: auto;">
      <input type="checkbox" data-target="delivery-toggle.toggle">
      <span class="slider round" data-target="delivery-toggle.slider"></span>
    </label>
  </div>

  <hr style="border-color: #6200EE; border-width: 2px; margin-left: 15px; margin-right: 15px;">

</div>