<div class="bg-blue"">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="form-actions button text-center">
      <%= f.button :submit, "Log in", class: "button violet" %>
    </div>
  <% end %>
</div>
